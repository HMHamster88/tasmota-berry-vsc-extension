{
  "name": "tasmota-berry-vsc-extension",
  "displayName": "tasmota-berry-vsc-extension",
  "description": "## VSCode extension for Tasmota Berry Scripts Upload and Execute",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "tasmota-berry-vsc-extension.upload",
        "title": "Tasmota Upload"
      },
      {
        "command": "tasmota-berry-vsc-extension.execute",
        "title": "Tasmota Execute"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "tasmota-berry-vsc-extension.execute",
          "group": "navigation"
        },
        {
          "command": "tasmota-berry-vsc-extension.upload",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Tasmota Berry",
      "properties": {
        "device.address": {
          "type": "string",
          "default": "http://192.168.0.8",
          "description": "Tasmota device address"
        },
        "device.resetVmAfterUpload": {
          "type": "boolean",
          "default": true,
          "description": "Reset Berry VM afrer upload"
        },
        "device.outputPollong": {
          "type": "boolean",
          "default": true,
          "description": "Output polling"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.107.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  },
  "dependencies": {
    "axios": "^1.13.2"
  }
}